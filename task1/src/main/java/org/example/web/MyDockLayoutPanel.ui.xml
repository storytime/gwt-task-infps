<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
        <g:SplitLayoutPanel>

            <g:north size="500">
                <g:FlowPanel>
                    <c:CellTable ui:field='dataGrid' visible="true" width="100%"/>
                </g:FlowPanel>
            </g:north>


            <g:center width="200">
                <g:FlowPanel>
                    <g:VerticalPanel width="100%">
                        <g:HorizontalPanel>
                            <g:Label width="150">Surname:</g:Label>
                            <g:TextBox ui:field='surname' readOnly="true"/>
                        </g:HorizontalPanel>

                        <g:HorizontalPanel>
                            <g:Label width="150">Email:</g:Label>
                            <g:TextBox ui:field='email' readOnly="true"/>
                        </g:HorizontalPanel>
                    </g:VerticalPanel>
                </g:FlowPanel>
            </g:center>

            <g:east size="900">
                <g:FlowPanel>
                </g:FlowPanel>
            </g:east>

        </g:SplitLayoutPanel>
</ui:UiBinder>