<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <g:SplitLayoutPanel>

        <g:north size="500">
            <g:FlowPanel>
                <c:CellTable ui:field='cellTable' visible="true" width="100%"/>
            </g:FlowPanel>
        </g:north>


        <g:center width="200">
            <g:FlowPanel>
                <g:VerticalPanel width="100%">
                    <g:HorizontalPanel>
                        <g:Label width="150">Surname:</g:Label>
                        <g:TextBox width="400" ui:field='surname' readOnly="true"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel>
                        <g:Label width="150">Email:</g:Label>
                        <g:TextBox width="400" ui:field='email' readOnly="true"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:FlowPanel>
        </g:center>

        <g:east size="900">
            <g:AbsolutePanel>

                <g:VerticalPanel width="100%">
                    <g:HorizontalPanel>
                        <g:CheckBox ui:field='disableCb' width="150">Disable CheckBoxes</g:CheckBox>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel>
                        <g:CheckBox ui:field='selectionCb' width="150">Disable Selection</g:CheckBox>
                    </g:HorizontalPanel>
                </g:VerticalPanel>

                <g:at left='0' top='200'>
                    <g:Button ui:field="goButton">Go</g:Button>
                </g:at>
            </g:AbsolutePanel>
        </g:east>

    </g:SplitLayoutPanel>
</ui:UiBinder>