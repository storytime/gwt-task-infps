<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>

        <g:VerticalPanel width="100%">
            <g:HorizontalPanel>
                <g:Label width="150">Surname:</g:Label>
                <g:TextBox width="400" ui:field='surname' readOnly="true"/>
            </g:HorizontalPanel>

            <g:HorizontalPanel>
                <g:Label width="150">Email:</g:Label>
                <g:TextBox width="400" ui:field='email' readOnly="true"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>

    </g:HTMLPanel>
</ui:UiBinder>